# start a terminal
# bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Shift+Return exec terminology

# Volume shortcuts
bindsym $mod+v exec amixer -q set Master 5%+
bindsym $mod+c exec amixer -q set Master 5%-

# Brightness <- not tested
bindsym XF86MonBrightnessUp exec xbacklight + 10
bindsym XF86MonBrightnessDown exec xbacklight - 10

# Set workspace name <- assign a free key map
# bindsym $mod+n exec i3-input -F 'rename workspace to %s' -P 'New name: '

# kill focused window
bindsym $mod+Shift+C kill

# start dmenu (a program launcher)
bindsym $mod+p exec dmenu_run

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+H move left
bindsym $mod+Shift+J move down
bindsym $mod+Shift+K move up
bindsym $mod+Shift+L move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split in horizontal orientation
bindsym $mod+i split h

# split in vertical orientation
bindsym $mod+u split v

# enter fullscreen mode for the focused container
bindsym $mod+o fullscreen

# change container layout (stacked, tabbed, default)
# bindsym $mod+s layout stacking
bindsym $mod+t layout tabbed
# bindsym $mod+n layout stacked
bindsym $mod+n layout default

# focus the parent container
bindsym $mod+g focus parent

# switch to workspace
bindsym $mod+1 workspace 1: emacs
bindsym $mod+2 workspace 2: www
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+q workspace q
bindsym $mod+w workspace w
bindsym $mod+e workspace e
bindsym $mod+r workspace r
bindsym $mod+a workspace a
bindsym $mod+s workspace s
bindsym $mod+d workspace d
bindsym $mod+y scratchpad show

# assign workspace to output
workspace "1: emacs" output Virtual1
workspace "4" output Virtual1
workspace "q" output Virtual1
workspace "w" output Virtual1
workspace "a" output Virtual1
workspace "s" output Virtual1

workspace "2: www" output Virtual2
workspace "3" output Virtual2
workspace "e" output Virtual2
workspace "r" output Virtual2
workspace "d" output Virtual2

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace "1: emacs"
bindsym $mod+Shift+2 move container to workspace "2: www"
bindsym $mod+Shift+3 move container to workspace "3"
bindsym $mod+Shift+4 move container to workspace "4"
bindsym $mod+Shift+q move container to workspace "q"
bindsym $mod+Shift+w move container to workspace "w"
bindsym $mod+Shift+e move container to workspace "e"
bindsym $mod+Shift+r move container to workspace "r"
bindsym $mod+Shift+a move container to workspace a: alfa
bindsym $mod+Shift+s move container to workspace "s"
bindsym $mod+Shift+d move container to workspace "d"
bindsym $mod+Shift+y move scratchpad

# move workspace to another screen
bindsym $meta+Control+Shift+h move workspace to output Virtual1
bindsym $meta+Control+Shift+l move workspace to output Virtual2
bindsym $meta+Control+Shift+s exec ~/.i3/i3-display-swap.sh

# disable window titles
new_window pixel 2
# default_border pixel 2

# client focused
# client.focused #00ff00 #00ff00 #00ff00 #00ff00 #00ff00
client.focused #4bccf2 #4bccf2 #4bccf2 #4bccf2 #4bccf2

# move scratchpad
bindsym $meta+Control+h move container to output Virtual1
bindsym $meta+Control+l move container to output Virtual2
bindsym $meta+Control+s exec ~/.i3/i3-display-swap.sh

# like $mod+y but undoing all the changes
bindsym $mod+Control+u floating toggle; move scratchpad

# bindsym $mod+Shift+h move container to output Virtual1; focus output left; focus floating
# bindsym $mod+Shift+l move container to output Virtual2; focus output right; focus floating

# reload the configuration file
bindsym $mod+Shift+i reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+u restart
# exit i3 (logs you out of your X session)
bindsym $mod+Shift+Z exit


# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.

        # same bindings, but for the arrow keys
        bindsym 113 resize shrink width 10 px or 10 ppt
        bindsym 116 resize grow height 10 px or 10 ppt
        bindsym 111 resize shrink height 10 px or 10 ppt
        bindsym 114 resize grow width 10 px or 10 ppt

        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+m mode "resize"
# }}}
